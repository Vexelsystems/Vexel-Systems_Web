rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Admin functions
    function isAdmin() {
      return request.auth != null && (request.auth.token.email == "vexelsystems@gmail.com" || request.auth.token.email_verified == true);
    }

    // Contact Messages
    match /contact_messages/{messageId} {
      allow create: if true; // Public contact form
      allow read, update, delete: if isAdmin();
    }

    // Quotes
    match /quotes/{quoteId} {
      allow create: if true; // Public quote form
      allow read, update, delete: if isAdmin();
    }

    // Appointments / Consultations
    match /appointments/{appointmentId} {
      allow create: if true; // Public consultation form
      allow read, update, delete: if isAdmin();
    }
    
    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
